{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Linux",
      "configurations": ["Launch Linux"]
    },
    {
      "name": "Windows",
      "configurations": ["Launch Windows"]
    }
  ],
  "configurations": [
    {
      "name": "Launch Linux",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/GlCraft/GlCraft",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}/build/GlCraft/",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "cmake",
      "request": "launch",
      "name": "CMake: Configure project",
      "cmakeDebugType": "configure",
      "clean": false,
      "configureAll": false,
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Launch Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/GlCraft/GlCraft.exe",
      "cwd": "${workspaceRoot}/build/GlCraft/",
      "externalConsole": true,
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "cmake",
      "request": "launch",
      "name": "Debug portfile(s)",
      "cmakeDebugType": "external",
      "pipeName": "\\\\.\\pipe\\vcpkg_ext_portfile_dbg",
      "preLaunchTask": "Debug vcpkg commands"
    }
  ]
}
