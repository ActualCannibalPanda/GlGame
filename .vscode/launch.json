  "version": "0.2.0",
  "compounds": [
    {
      "name": "Linux",
      "configurations": ["CMake: Configure project", "Launch Linux"]
    },
    {
      "name": "Windows",
      "configurations": ["Launch Windows"]
    }
  ],
  "configurations": [
    {
      "type": "cmake",
      "request": "launch",
      "name": "CMake: Configure project",
      "cmakeDebugType": "configure",
      "clean": false,
      "configureAll": false,
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Launch Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/GlCraft/GlCraft.exe",
      "cwd": "${workspaceRoot}/build/GlCraft/",
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Launch Linux",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/GlCraft/GlCraft",
      "cwd": "${workspaceRoot}/build/GlCraft/",
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "cmake",
      "request": "launch",
      "name": "Debug portfile(s)",
      "cmakeDebugType": "external",
      "pipeName": "\\\\.\\pipe\\vcpkg_ext_portfile_dbg",
      "preLaunchTask": "Debug vcpkg commands"
    }
  ]
}
