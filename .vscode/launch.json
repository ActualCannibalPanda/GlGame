  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "cppdbg",
      "request": "launch",
      "windows": {
        "program": "${workspaceRoot}/build/GlCraft/GlCraft.exe"
      },
      "linux": {
        "program": "${workspaceRoot}/build/GlCraft/GlCraft"
      },
      "cwd": "${workspaceRoot}/build/GlCraft/"
    },
    {
      "type": "cmake",
      "request": "launch",
      "name": "Debug portfile(s)",
      "cmakeDebugType": "external",
      "pipeName": "/tmp/vcpkg_ext_portfile_dbg",
      "preLaunchTask": "Debug vcpkg commands"
    }
  ]
}
